generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id @default(autoincrement())
  productName String
  price       Int
  image       String[] @default([])
  cartItems   CartItem[]
  orderItems  OrderItem[] // ðŸ‘ˆ ì¶”ê°€
}

model Cart {
  id     Int        @id @default(autoincrement())
  userId String
  items  CartItem[]
  
  @@index([userId])
}

model CartItem {
  id        Int     @id @default(autoincrement())
  quantity  Int     @default(1) 
  cartId    Int
  productId Int

  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([cartId])
  @@index([productId])
}


model Payment {
  id           Int         @id @default(autoincrement())
  userObjectId String
  userName     String
  orderId      String      @unique
  amount       Int
  paymentKey   String
  createdAt    DateTime    @default(now())
  
  orderItems   OrderItem[]
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  paymentId   Int
  productId   Int
  productName String
  price       Int
  quantity    Int
  
  payment     Payment  @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id])
  
  @@index([paymentId])
  @@index([productId])
}

model PaymentIntegrityCheck {
  orderId             String   @id
  amount              Int
  amountCurrency      String   @default("KRW")
  email               String
  userId              String
  selectedCartItemIds Int[]
  createdAt           DateTime @default(now())
}
